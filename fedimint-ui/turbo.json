{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["build/**", "dist/**"],
      "dependsOn": ["^build"]
    },
    "guardian-ui#build": {
      "outputs": ["build/**", "dist/**"],
      "dependsOn": ["^build"],
      "env": ["REACT_APP_FM_CONFIG_API"]
    },
    "gateway-ui#build": {
      "outputs": ["build/**", "dist/**"],
      "dependsOn": ["^build"],
      "env": ["REACT_APP_FM_GATEWAY_API", "REACT_APP_FM_GATEWAY_PASSWORD"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
